<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <import resource="housematch-servlet/housematch-xml-persistence.xml"/>
    <import resource="housematch-servlet/housematch-security.xml"/>

    <bean name="emailProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="properties">
            <value>
                mail.smtp.user=housematchb5@gmail.com
                mail.password=glo-4003
                mail.smtp.port=587
                mail.smtp.host=smtp.gmail.com
                mail.smtp.starttls.enable=true
                mail.smtp.auth=true
                mail.smtp.debug=true
            </value>
        </property>
    </bean>

    <bean id="javaXMailSender" class="ca.ulaval.glo4003.housematch.email.JavaxMailSender">
        <constructor-arg type="java.util.Properties" ref="emailProperties"/>
    </bean>

    <bean id="mailSender" class="ca.ulaval.glo4003.housematch.email.MailSender">
        <constructor-arg ref="javaXMailSender"/>
    </bean>

    <bean id="userService" class="ca.ulaval.glo4003.housematch.services.UserService">
        <constructor-arg ref="xmlUserRepository"/>
		<constructor-arg type="ca.ulaval.glo4003.housematch.validation.UserCreationValidator"/>
        <constructor-arg ref="mailSender"/>
    </bean>

    <bean id="loginController" class="ca.ulaval.glo4003.housematch.spring.web.controllers.LoginController">
        <constructor-arg ref="userService"/>
    </bean>

    <bean id="registrationController" class="ca.ulaval.glo4003.housematch.spring.web.controllers.RegistrationController">
        <constructor-arg ref="userService"/>
    </bean>
	
	<bean id="homeController" class="ca.ulaval.glo4003.housematch.spring.web.controllers.HomeController">
		<constructor-arg ref="authorizationValidator"/>
    </bean>


</beans>
