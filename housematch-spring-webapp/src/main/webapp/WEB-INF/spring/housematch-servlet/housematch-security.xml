<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="resourceAccessValidator" class="ca.ulaval.glo4003.housematch.spring.web.security.ResourceAccessValidator">
        <constructor-arg>
			<map>
				<entry key="adminHome" value-ref="adminHomeAccessList" />
				<entry key="buyerHome" value-ref="buyerHomeAccessList" />
				<entry key="sellerHome" value-ref="sellerHomeAccessList" />
			</map>
		</constructor-arg>
    </bean>
	
	<bean id="adminHomeAccessList" class="ca.ulaval.glo4003.housematch.spring.web.security.ResourceAccessList">
        <constructor-arg>
			<set>
				<value>ADMINISTRATOR</value>
			</set>
		</constructor-arg>
    </bean>
	
	<bean id="buyerHomeAccessList" class="ca.ulaval.glo4003.housematch.spring.web.security.ResourceAccessList">
        <constructor-arg>
			<set>
				<value>BUYER</value>
			</set>
		</constructor-arg>
    </bean>
	
	<bean id="sellerHomeAccessList" class="ca.ulaval.glo4003.housematch.spring.web.security.ResourceAccessList">
        <constructor-arg>
			<set>
				<value>SELLER</value>
			</set>
		</constructor-arg>
    </bean>
	
</beans>