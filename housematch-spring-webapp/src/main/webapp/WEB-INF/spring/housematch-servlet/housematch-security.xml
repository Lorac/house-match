<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="resourceAccessValidator" class="ca.ulaval.glo4003.housematch.spring.web.security.ResourceAccessValidator">
        <constructor-arg>
			<map>
				<entry key="adminHome" value-ref="adminHomeAccessList" />
				<entry key="buyerHome" value-ref="buyerHomeAccessList" />
				<entry key="sellerHome" value-ref="sellerHomeAccessList" />
			</map>
		</constructor-arg>
    </bean>
	
	<bean id="adminHomeAccessList" class="ca.ulaval.glo4003.housematch.spring.web.security.ResourceAccessList">
        <constructor-arg>
			<set>
				<ref bean="adminRoleAccessEntry" />
			</set>
		</constructor-arg>
    </bean>
	
	<bean id="buyerHomeAccessList" class="ca.ulaval.glo4003.housematch.spring.web.security.ResourceAccessList">
        <constructor-arg>
			<set>
				<ref bean="buyerRoleAccessEntry" />
			</set>
		</constructor-arg>
    </bean>
	
	<bean id="sellerHomeAccessList" class="ca.ulaval.glo4003.housematch.spring.web.security.ResourceAccessList">
        <constructor-arg>
			<set>
				<ref bean="sellerRoleAccessEntry" />
			</set>
		</constructor-arg>
    </bean>
	
	<bean id="adminRoleAccessEntry" class="ca.ulaval.glo4003.housematch.spring.web.security.RoleResourceAccessEntry">
        <constructor-arg type="ca.ulaval.glo4003.housematch.domain.user.UserRole" value="ADMINISTRATOR"/>
		<constructor-arg type="java.lang.Boolean" value="True"/>
    </bean>
	
	<bean id="buyerRoleAccessEntry" class="ca.ulaval.glo4003.housematch.spring.web.security.RoleResourceAccessEntry">
        <constructor-arg type="ca.ulaval.glo4003.housematch.domain.user.UserRole" value="BUYER"/>
		<constructor-arg type="java.lang.Boolean" value="True"/>
    </bean>
	
	<bean id="sellerRoleAccessEntry" class="ca.ulaval.glo4003.housematch.spring.web.security.RoleResourceAccessEntry">
        <constructor-arg type="ca.ulaval.glo4003.housematch.domain.user.UserRole" value="SELLER"/>
		<constructor-arg type="java.lang.Boolean" value="True"/>
    </bean>
	
</beans>