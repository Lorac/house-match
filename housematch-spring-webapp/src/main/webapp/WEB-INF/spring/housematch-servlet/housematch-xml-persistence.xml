		<constructor-arg ref="basicTextEncryptor"/>
		<constructor-arg type="java.lang.String" value="9fhaoisadw43"/>
    </bean>
	
	<bean id="resourceLoader" class="ca.ulaval.glo4003.housematch.persistence.ResourceLoader"/>
