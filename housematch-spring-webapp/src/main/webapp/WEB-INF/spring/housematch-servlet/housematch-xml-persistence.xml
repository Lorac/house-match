<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="xmlUserRepository" class="ca.ulaval.glo4003.housematch.persistence.repositories.XmlUserRepository">
        <constructor-arg ref="xmlUserRepositoryMarshaller"/>
		<constructor-arg ref="xmlUserAdapter"/>
    </bean>
	
    <bean id="xmlUserRepositoryMarshaller" class="ca.ulaval.glo4003.housematch.persistence.marshalling.XmlRepositoryMarshaller">
		<constructor-arg type="java.lang.Class" value="#{ T(ca.ulaval.glo4003.housematch.persistence.assemblers.XmlUserAssembler) }"/>
		<constructor-arg ref="resourceLoader"/>
        <constructor-arg type="java.lang.String" value="/data/housematch-users.xml"/>
    </bean>
	
	<bean id="xmlUserAdapter" class="ca.ulaval.glo4003.housematch.domain.user.XmlUserAdapter">
		<constructor-arg ref="basicTextEncryptor"/>
	</bean>
	
	<bean id="basicTextEncryptor" class="org.jasypt.util.text.BasicTextEncryptor">
        <property name="password" value="9fhaoisadw43"/>
    </bean>

    <bean id="resourceLoader" class="ca.ulaval.glo4003.housematch.utils.ResourceLoader"/>

</beans>